{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "JoineryServer": "Debug"
    }
  },
  "Authentication": {
    "GitHub": {
      "ClientId": "your-github-client-id-for-dev",
      "ClientSecret": "your-github-client-secret-for-dev"
    },
    "Microsoft": {
      "Instance": "https://login.microsoftonline.com/",
      "TenantId": "your-dev-tenant-id",
      "ClientId": "your-dev-microsoft-client-id",
      "ClientSecret": "your-dev-microsoft-client-secret",
      "CallbackPath": "/signin-microsoft"
    }
  },
  "JWT": {
    "SecretKey": "development-secret-key-for-jwt-tokens-must-be-at-least-256-bits-long",
    "Issuer": "JoineryServer-Dev",
    "Audience": "JoineryClients-Dev",
    "ExpirationHours": 1,
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30
  },
  "Cors": {
    "EnableCors": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001", 
      "http://localhost:4200",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:3001",
      "https://localhost:4200",
      "https://localhost:5173"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "Content-Type", "Authorization", "X-API-Key" ],
    "ExposedHeaders": [ "X-RateLimit-Limit", "X-RateLimit-Remaining", "X-RateLimit-Reset", "X-RateLimit-Policy" ],
    "AllowCredentials": true,
    "PreflightMaxAge": 86400,
    "AllowAnyOriginInDevelopment": true
  },
  "RateLimit": {
    "EnableDistributedCache": false,
    "Redis": {
      "ConnectionString": "localhost:6379"
    },
    "Global": {
      "Anonymous": {
        "RequestsPerMinute": 10,
        "RequestsPerHour": 500,
        "RequestsPerDay": 5000
      },
      "Authenticated": {
        "RequestsPerMinute": 30,
        "RequestsPerHour": 2000,
        "RequestsPerDay": 20000
      },
      "Admin": {
        "RequestsPerMinute": 0,
        "RequestsPerHour": 0,
        "RequestsPerDay": 0
      }
    },
    "Endpoints": {
      "Auth": {
        "Anonymous": {
          "RequestsPerMinute": 5,
          "RequestsPerHour": 50,
          "RequestsPerDay": 200
        },
        "Authenticated": {
          "RequestsPerMinute": 10,
          "RequestsPerHour": 100,
          "RequestsPerDay": 500
        }
      },
      "Health": {
        "Anonymous": {
          "RequestsPerMinute": 0,
          "RequestsPerHour": 0,
          "RequestsPerDay": 0
        }
      }
    }
  }
}
